<div class="page-header">
  <h1>Edit Activity Category #<%= @activity_category.id %></h1>
</div>

<% if @activity_category.errors.any? %>
  <% @activity_category.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<form action="/update_activity_category/<%= @activity_category.id %>" class="form-horizontal">
  <!-- Label and input for activity_category -->
  <div class="form-group">
    <label for="activity_category" class="col-sm-2 control-label">
      Activity category
    </label>
    <div class="col-sm-10">
      <input type="text" id="activity_category" name="activity_category" placeholder="Activity category" class="form-control" value="<%= @activity_category.activity_category %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update Activity Category" class="btn btn-primary">
    </div>
  </div>
</form>

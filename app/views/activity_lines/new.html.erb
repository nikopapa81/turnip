<div class="page-header">
  <h1>Add Activity Line</h1>
</div>

<% if @activity_line.errors.any? %>
  <% @activity_line.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<form action="/create_activity_line" class="form-horizontal">
  <!-- Label and input for food_category_id -->
  <div class="form-group">
    <label for="food_category_id" class="col-sm-2 control-label">
      Food category
    </label>
    <div class="col-sm-10">
      <input type="text" id="food_category_id" name="food_category_id" placeholder="Food category" class="form-control" value="<%= @activity_line.food_category_id %>">
    </div>
  </div>

  <!-- Label and input for food_item_id -->
  <div class="form-group">
    <label for="food_item_id" class="col-sm-2 control-label">
      Food item
    </label>
    <div class="col-sm-10">
      <input type="text" id="food_item_id" name="food_item_id" placeholder="Food item" class="form-control" value="<%= @activity_line.food_item_id %>">
    </div>
  </div>

  <!-- Label and input for unit_of_measure_id -->
  <div class="form-group">
    <label for="unit_of_measure_id" class="col-sm-2 control-label">
      Unit of measure
    </label>
    <div class="col-sm-10">
      <input type="text" id="unit_of_measure_id" name="unit_of_measure_id" placeholder="Unit of measure" class="form-control" value="<%= @activity_line.unit_of_measure_id %>">
    </div>
  </div>

  <!-- Label and input for activity_id -->
  <div class="form-group">
    <label for="activity_id" class="col-sm-2 control-label">
      Activity
    </label>
    <div class="col-sm-10">
      <input type="text" id="activity_id" name="activity_id" placeholder="Activity" class="form-control" value="<%= @activity_line.activity_id %>">
    </div>
  </div>

  <!-- Label and input for quantity -->
  <div class="form-group">
    <label for="quantity" class="col-sm-2 control-label">
      Quantity
    </label>
    <div class="col-sm-10">
      <input type="text" id="quantity" name="quantity" placeholder="Quantity" class="form-control" value="<%= @activity_line.quantity %>">
    </div>
  </div>

  <!-- Label and input for cost_of_purchase -->
  <div class="form-group">
    <label for="cost_of_purchase" class="col-sm-2 control-label">
      Cost of purchase
    </label>
    <div class="col-sm-10">
      <input type="text" id="cost_of_purchase" name="cost_of_purchase" placeholder="Cost of purchase" class="form-control" value="<%= @activity_line.cost_of_purchase %>">
    </div>
  </div>

  <!-- Label and input for source_of_purchase -->
  <div class="form-group">
    <label for="source_of_purchase" class="col-sm-2 control-label">
      Source of purchase
    </label>
    <div class="col-sm-10">
      <textarea id="source_of_purchase" name="source_of_purchase" placeholder="Source of purchase" class="form-control" rows="3"><%= @activity_line.source_of_purchase %></textarea>
    </div>
  </div>

  <!-- Label and input for expiration_date -->
  <div class="form-group">
    <label for="expiration_date" class="col-sm-2 control-label">
      Expiration date
    </label>
    <div class="col-sm-10">
      <input type="text" id="expiration_date" name="expiration_date" placeholder="Expiration date" class="form-control" value="<%= @activity_line.expiration_date %>">
    </div>
  </div>

  <!-- Label and input for notes -->
  <div class="form-group">
    <label for="notes" class="col-sm-2 control-label">
      Notes
    </label>
    <div class="col-sm-10">
      <textarea id="notes" name="notes" placeholder="Notes" class="form-control" rows="3"><%= @activity_line.notes %></textarea>
    </div>
  </div>

<input type="hidden" name="user_id" value="<%= current_user.id %>">

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Activity Line" class="btn btn-primary">
    </div>
  </div>
</form>

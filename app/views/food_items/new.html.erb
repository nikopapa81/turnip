<div class="page-header">
  <h1>Add Food Item</h1>
</div>

<% if @food_item.errors.any? %>
  <% @food_item.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<form action="/create_food_item" class="form-horizontal">
  <!-- Label and input for food_item -->
  <div class="form-group">
    <label for="food_item" class="col-sm-2 control-label">
      Food item
    </label>
    <div class="col-sm-10">
      <input type="text" id="food_item" name="food_item" placeholder="Food item" class="form-control" value="<%= @food_item.food_item %>">
    </div>
  </div>

  <!-- Label and input for food_category_id -->
  <div class="form-group">
    <label for="food_category_id" class="col-sm-2 control-label">
      Food category
    </label>
    <div class="col-sm-10">
      <input type="text" id="food_category_id" name="food_category_id" placeholder="Food category" class="form-control" value="<%= @food_item.food_category_id %>">
    </div>
  </div>

  <!-- Label and input for unit_of_measure_id -->
  <div class="form-group">
    <label for="unit_of_measure_id" class="col-sm-2 control-label">
      Unit of measure
    </label>
    <div class="col-sm-10">
      <input type="text" id="unit_of_measure_id" name="unit_of_measure_id" placeholder="Unit of measure" class="form-control" value="<%= @food_item.unit_of_measure_id %>">
    </div>
  </div>

  <!-- Label and input for average_expiration_days -->
  <div class="form-group">
    <label for="average_expiration_days" class="col-sm-2 control-label">
      Average expiration days
    </label>
    <div class="col-sm-10">
      <input type="text" id="average_expiration_days" name="average_expiration_days" placeholder="Average expiration days" class="form-control" value="<%= @food_item.average_expiration_days %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Food Item" class="btn btn-primary">
    </div>
  </div>
</form>
